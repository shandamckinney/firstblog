<div class="jumbotron">
  <h1 id="title">Coding Journey</h1>
</div>

<h1 id="previousposts">Previous Posts:</h1>
<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-4">
        <%= image_tag(product.image_url, class: "img-fluid") %>
        <a href="#"><h1><% product.name %></h1></a>
        <p><% product.description %></p>
        <strong><% product.date %></strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
